{
  "compilerOptions": {
    "rootDir": "./",
    "baseUrl": "./",
    "skipLibCheck": true,
    "lib": ["dom", "ESNext", "ES2021.String"],
    "experimentalDecorators": true,
    "incremental": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "paths": {
      "@i/*": ["back/src/*"],
      "@cli/*": ["cli/*"],
      "@ops/*": ["ops/*"]
    },
    "target": "ES2018",
    "module": "CommonJS",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "types": ["node", "mocha"]
  },
  "include": ["./"],
  "exclude": ["**/node_modules/**", "**/*.test.*/**"]
}
